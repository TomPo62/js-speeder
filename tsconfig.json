{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES6",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
      "node_modules",
      "tests",
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
  "include": [
    "src/**/*"
  ]
}
